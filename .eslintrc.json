{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "airbnb-base",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            { "code": 80 }
        ],
        "arrow-parens": [
            2,
            "as-needed"
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["./"]
            }
        }
    }
}
